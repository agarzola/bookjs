.book
  position relative
  background-color transparent
  p.book--loading_message
    padding 3em 1em
    margin 0
    height 1em
    font-style italic
    text-align center
    opacity 1
    transition-property opacity, height, padding
  &.ready p.book--loading_message
    opacity 0
    height 0
    padding 0
  &:fullscreen
    width 100%
    height 100%

.book--background
  background-color #ebebeb
  position relative
  :fullscreen &
    background-color transparent
    width 100%

.book--wrapper
  position relative
  margin 0 auto
  height 0
  opacity 0
  border 1px solid #eee
  transition opacity 0.3s ease-in-out 0.2s, height 0.2s ease-in-out, width $page_turn_duration ease-in-out
  background-color transparent
  .fast &
    transition opacity 0.3s ease-in-out 0.2s, height 0.2s ease-in-out, width $fast_page_turn_duration ease-in-out
  .ready &
    opacity 1
  :fullscreen &
    border 0
